generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./rifas.db"
}

model Compra {
  id        Int      @id @default(autoincrement())
  nombre    String
  telefono  String
  correo    String
  cedula    String
  boletos   Int
  total     Int
  comprobante String
  aprobado  Boolean  @default(false)
  creadoEn  DateTime @default(now())
}
